<%= render 'shared/nav' %>

<div class="card mt-5 mx-auto" style="max-width: 600px;">
  <div class="card-header bg-primary text-white">
    <h2 class="card-title">Edit Post</h2>
  </div>
  <div class="card-body">
    <%= form_for @post do |f| %>
      <div class="mb-3">
        <%= f.label :title, class: "form-label fw-bold" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :description, class: "form-label fw-bold" %>
        <%= f.text_area :description, class: "form-control", rows: 5 %>
      </div>
      <div class="d-grid gap-2">
        <%= f.submit "Update Post", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
