<h2>Edit Post</h2>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Update Post", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back to Post", post_path(@post), class: "btn btn-secondary" %>
