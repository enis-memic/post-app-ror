<%= render 'shared/nav' %>

<div class="d-flex align-items-center justify-content-center" >
  <div>
  <h4>Posts</h4>
  <% @posts.each do |post| %>
    <%= link_to post_path(post), class: "nav-link mt-4 d-flex justify-content-center" do %>
        <div class="card mb-3 text-center justify-content-center" style="width: 800px;">
          <div class="row g-0 text-center">
            <div class="col-md-8">
              <div class="card-body d-flex justify-content-between align-items-center mb-2" style="width: 800px;">
                <div class="d-flex flex-column">
                  <h2 h2 class="card-title text-start"><%= post.title %></h2>
                  <h5 class="card-title"><%= post.description %></h5>
                  <h5 class=""><%= post.author.name %></h5>
                  <p class="card-text"><small class="text-white">Comments: <%= post.comment_counter %></small></p> 
                </div>
                <div class ="align-self-end">
                <p class="card-text text-end"><span>Comments: <%= post.comment_counter %></span></p>
                </div>
              </div>
            </div>
            </div>
          </div>
      <% end %>
    <% end %>

       
  <% if user_signed_in? %>
    <%= link_to "Add New Post", new_post_path, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "Add New Post", new_user_session_path, class: "btn btn-primary", data: { confirm: "You need to sign in to create a new post. Do you want to sign in?" } %>
  <% end %>
    
     <div class="d-flex justify-content-center", style="margin: 20px;">
  <%== pagy_bootstrap_nav(@pagy) %> 
</div>
      
          
  </div>
</div>
