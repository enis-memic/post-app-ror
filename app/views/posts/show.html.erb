<%= render 'shared/nav' %>


<div class='mt-3 d-flex align-items-center flex-column'>
  <div class="card mb-3 border-primary" style="width: 800px;">
    <div class="card-header bg-primary text-white">
      <div class='row'>
        <div class='col-md-8'><%= @post.title %> by <%= @post.author.name %></div>
        <div class='col-md-4 d-flex gap-2'>
        <p class="card-text"> <%= @post.created_at%>
           <p class="card-text"><small class="text-white">Comments: <%= @post.comment_counter %></small></p> 
        </div>
      </div>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @post.description%></p>
    </div>
  </div>
    <% if @comments.empty? %>
     <div class="card mb-3 border-secondary" style="width: 700px;">
       <div class="card-body">
            <p class="card-text">No Comments</p>
          </div>
        </div>
 <% else %>
     <div class="card mb-3 border-secondary" style="width: 700px;">
          <div class="card-body">
            <% @comments.each do |comment| %>
            <div class='d-flex justify-content-between align-items-center'>
              <p class="card-text"><%= comment.author.name %>: <%= comment.text %></p>
              <% if can? :destroy, comment %>
              <%= button_to "Delete", post_comment_path(@post, comment), method: :delete, class:"btn btn-outline-danger" %>
              <% end %>
              </div>
              <% end %>
          </div>
      </div>
      <% end %>
<div class="d-flex align-items-center justify-content-between" style="width:400px">

    <% if user_signed_in? %>
    <%= link_to "Add Comment", new_post_comment_path(@post), class:"btn btn-primary" %>
    <% else %>
    <p>You need to <%= link_to 'sign in', new_user_session_path %> to add a comment.</p>
    <% end %>

      <% if can? :edit, @post %>
  <%= link_to "Edit", edit_post_path(@post), class: "btn btn-secondary" %>
<% end %>
<% if can? :destroy, @post %>
  <%= button_to "Delete", post_path(@post), method: :delete, class: "btn btn-danger" %>
<% end %>

</div>
